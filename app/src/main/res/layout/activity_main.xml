<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.events.MainActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:src="@drawable/eventologo" />

    <Button
        android:id="@+id/saved_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/next_button"
        android:layout_marginBottom="26dp"
        android:background="@drawable/roundedshape"
        android:gravity="center"
        android:onClick="savedClass"
        android:text="Favorite Events"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/saved_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/roundedshape"
        android:gravity="center"
        android:onClick="nextClass"
        android:text="Find Events "
        android:textAllCaps="false"
        android:textColor="@android:color/white" />



</RelativeLayout>
